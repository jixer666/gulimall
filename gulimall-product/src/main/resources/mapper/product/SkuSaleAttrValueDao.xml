<!--    第二版本-->
        <select id="selectSkuSaleAttrValueBySpuId" resultMap="skuSaleAttrValueResult">
            SELECT
                pss.attr_id,
                pss.attr_name,
                pss.attr_value,
                GROUP_CONCAT(distinct pss.sku_id) sku_Ids
            FROM
                pms_sku_info ps
            LEFT JOIN pms_sku_sale_attr_value pss ON ps.sku_id = pss.sku_id
            where ps.spu_id = #{spuId}
            GROUP BY pss.attr_id, pss.attr_name, pss.attr_value
        </select>

